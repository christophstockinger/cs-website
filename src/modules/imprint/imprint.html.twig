<section class="mImprint{% for modifier in modifiers %} mImprint--{{modifier}}{% endfor %}{% for xclass in xclasses %} {{xclass}}{% endfor %}">
  <div class="mImprint__wrapper">
    <div class="mImprint__container">
      <div class="mImprint__richtext">
        {% if headline %}
          {% include './../../components/headline/headline.html.twig' with headline only %}
        {% endif %}
        {% if subline %}
          {% include './../../components/headline/headline.html.twig' with subline only %}
        {% endif %}
        {% if paragraphs.length > 0 %}
          {% for paragraph in paragraphs %}
            {% include './../../components/paragraph/paragraph.html.twig' with paragraph only %}
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</section>
