      logo: {
        modifiers: ['scroller'],
        url: '#top',
        image: {
          src: 'assets/images/cs-wortmarke.svg',
          alt: 'CHRISTOPH STOCKINGER'
        }
      }
    } %}

    {% embed './layout/main/main.html.twig' %}
    {% block main %}
      {% include './modules/no-ie/no-ie.html.twig' with {
        modifiers: ['noShadow', 'padding2Rem'],
				headline: {
