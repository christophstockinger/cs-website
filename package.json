{
  "name": "boilerplate",
  "version": "2.0.0-beta",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "concurrently 'npm run serve' 'npm run watch' 'npm run twig:watch' ",
    "dev": "webpack --env.development",
    "watch": "webpack --env.development --watch",
    "production": "webpack --env.production",
    "build": "npm run clean && npm run production && npm run twig",
    "build-check": "npm run serve",
    "serve": "browser-sync start --config './config/browser-sync.js'",
    "twig": "twig-cli './src/*.html.twig' --base ./src/ --output ./dist/",
    "twig:watch": "watch -p './src/**/*.html.twig' -c 'npm run twig'",
    "clean": "rimraf ./dist",
    "generate": "node ./config/generate-pattern/generate.js",
    "release": "node ./config/release.js",
    "release-build": "npm run build && npm run release",
    "eslint-check": "eslint --print-config .eslintrc.json | eslint-config-prettier-check",
    "lint": "eslint . --ignore-path .gitignore && stylelint src/**/*.{css,scss}",
    "lint:commit": "commitlint -e $GIT_PARAMS"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/christophstockinger/cs-website.git"
  },
  "author": "Christoph Stockinger <cs@christophstockinger.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/christophstockinger/cs-website/issues"
  },
  "homepage": "https://github.com/christophstockinger/cs-website#readme",
  "dependencies": {
    "minivents": "^2.2.0",
    "mdn-polyfills": "^5.10.1",
    "objectFitPolyfill": "^2.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "archiver": "^3.0.0",
    "autoprefixer": "^9.1.1",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^8.0.0-beta.4",
    "babel-polyfill": "^6.26.0",
    "browser-sync": "^2.24.6",
    "case": "^1.5.5",
    "concurrently": "^3.6.1",
    "css-loader": "^1.0.0",
    "eslint": "^5.4.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-config-prettier-standard": "^2.0.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^2.6.2",
    "file-loader": "^1.1.11",
    "fs": "0.0.1-security",
    "husky": "^1.0.0-rc.13",
    "inquirer": "^6.2.0",
    "lint-staged": "^7.2.2",
    "lodash": "^4.17.10",
    "mini-css-extract-plugin": "^0.4.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.3",
    "npm": "^6.4.0",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "path": "^0.12.7",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.1.0",
    "standard": "^11.0.1",
    "style-loader": "^0.22.1",
    "stylelint": "^9.5.0",
    "stylelint-config-recess-order": "^2.0.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.3.0",
    "svg-sprite-loader": "^3.9.2",
    "twig-cli-tmpl": "^1.0.1",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "watch-cli": "^0.2.3",
    "webpack": "^4.16.5",
    "webpack-cli": "^2.1.5",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": "eslint",
    "src/**/*.{css,scss}": "stylelint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  }
}
